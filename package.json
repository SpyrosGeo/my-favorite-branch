{
  "name": "my-favorite-branch",
  "displayName": "My favorite branch ",
  "description": "A simple extention that lets you favorite git branches for easer switching",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "git@github.com:SpyrosGeo/my-favorite-branch.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.openBranchSelector",
        "title": "FavoriteBranch: show"
      },
      {
        "command": "extension.addToFavorites",
        "title": "FavoriteBranch: add"
      },
      {
        "command": "extension.removeFromFavorites",
        "title": "FavoriteBranch: remove"
      }
    ],
    "statusbar": {
      "id": "extension.icon",
      "label": "favorite-branch",
      "tooltip": "Toggle Favorite branches drawer",
      "command": "extension.openDrawer",
      "color": "#fff",
      "alignment": "left",
      "priority": 100
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "dependencies": {
    "simple-git": "^3.18.0"
  }
}
